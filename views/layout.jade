doctype html
html
	head
		title= title
		include templates/scripts

body
	.container
		nav.navbar.navbar-default(role="navigation")
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#earfulNav", aria-expanded="false", aria-controls="navbar")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') Pitchforks
				.collapse.navbar-collapse(id="pitchforksNav")
					ul.navbar-nav.nav
						li
							a(href="/about") About
					form.navbar-form.navbar-left(name='search', method='GET', action='/results')
						.form-group
							input.form-control(type='text', name='search')
							span= ' '
								button.btn.btn-default(type="submit") Search
					ul.nav.navbar-nav.navbar-right
						if user
							li 
								a(href="/logout")
									span.glyphicon.glyphicon-log-out= ' Logout' 
							li
								a(href="/profile")
									span.glyphicon.glyphicon-user= ' Profile' 
							li
								a(href="/protests")
									span.glyphicon.glyphicon-plus= ' Submit' 
						else
							li
								a(href="/signup")
									span.glyphicon.glyphicon-pencil= ' Sign-up'
							li
								a(href="/login", data-toggle="modal", data-target="loginModal")
									span.glyphicon.glyphicon-log-in= ' Login' 
							li
								a(href="/auth/twitter")
									img(src="/img/sign-in-with-twitter-l.png")
		block navigation
		.protestbg.jumbotron
			h1#title Pitchforks
			h3#slogan The time is now
		block content			